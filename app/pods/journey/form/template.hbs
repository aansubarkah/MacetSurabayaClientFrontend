<div class="box">
    <div class="box-header">
        <h3 class="box-title">Direction</h3>

        <div class="box-tools"></div>
    </div>
    <div class="box-body">
        <div class="form-group">
          {{ember-selectize
          content=times
          optionValuePath="content.value"
          optionLabelPath="content.label"
          value=lastminutes
          placeholder="Traffic about 30 minutes ago" }}
        </div>
        <div class="form-group">
          {{gmap-place placeCoordinate='getOriginCoordinate' elementId='searchOriginText' placeholder='Origin'}}
        </div>
        <div class="form-group">
          {{gmap-place placeCoordinate='getDestinationCoordinate' elementId='searchDestinationText' placeholder='Destination'}}
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="button" {{action 'getRoute'}}>Direction</button>
        </div>
    </div>
    <div class="box-footer clearfix">
        <div class="box-tools"></div>
    </div>
</div>
